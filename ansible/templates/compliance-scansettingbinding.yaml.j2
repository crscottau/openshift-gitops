apiVersion: compliance.openshift.io/v1alpha1
kind: ScanSettingBinding
metadata:
  name: e8-scans
  namespace: "{{ compliance_operator_namespace }}"                
profiles:
{% for profile in compliance_scan_profiles %}
  - name: "{{ profile }}"
    kind: Profile
    apiGroup: compliance.openshift.io/v1alpha1
{%- endfor %}
settingsRef:
  name: default
  kind: ScanSetting
  apiGroup: compliance.openshift.io/v1alpha1
