apiVersion: config.openshift.io/v1
kind: OAuth
metadata:
  name: cluster
spec:
  identityProviders:
  - name: {{ ldap_provider_name }}
    mappingMethod: claim
    type: LDAP
    ldap:
      attributes:
        id:
          - {{ ldap_attribute_id }}
        email:
          - {{ ldap_attribute_email }}
        name:
          - {{ ldap_attribute_name }}
        preferredUsername:
          - {{ ldap_attribute_username }}
      bindDN: {{ ldap_bind_dn }}
      bindPassword:
        name: ldap-bind-password
      insecure: false
      url: {{ ldap_url }}/{{ ldap_user_scope }}/{{ ldap_url_parameters }}
