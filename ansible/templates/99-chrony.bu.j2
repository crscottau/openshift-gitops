variant: openshift
version: 4.14.0
metadata:
  name: 99-{{ item }}-custom
  labels:
    machineconfiguration.openshift.io/role: {{ item }}
openshift:
  kernel_arguments:
    - loglevel=7
storage:
  files:
    - path: /etc/chrony.conf
      mode: 0644
      overwrite: true
      contents:
        inline: |
{%- for ntp_server in ntp_server_list %}        
          Pool {{ ntp_server }} iburst
{%- endfor %}          
          driftfile /var/lib/chrony/drift
          makestep 1.0 3
          rtcsync
          logdir /var/log/chrony
